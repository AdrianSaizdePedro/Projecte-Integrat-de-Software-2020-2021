    <!-- Base application theme. -->
    <style name="Theme.Lize" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Material Component filters -->
        <item name="materialCardViewStyle">@style/Widget.Lize.CardView.option1</item>
        <item name="toolbarStyle">@style/Widget.Lize.Toolbar</item>
        <item name="chipStyle">@style/Widget.Lize.Chip.option1</item>
        <item name="floatingActionButtonStyle">@style/Widget.Lize.FAB</item>
        <item name="hintTextColor">@style/Theme.hint</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <!-- CardView Style -->
    <style name="Widget.Lize.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorSurface">@color/md_grey_600</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Widget.Lize.CardView.option1" parent="Widget.Lize.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Lize.Card.Cut</item>
        <item name="strokeWidth">@dimen/cardnote_default_stroke_width</item>
        <item name="strokeColor">@color/primary_to_primary_dark</item>
    </style>

    <style name="ShapeAppearanceOverlay.Lize.Card.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- ToolBar Style -->
    <style name="Widget.Lize.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- Chip Style's -->
    <style name="Widget.Lize.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textAppearance">@style/TextAppearance.Lize.Body2</item>
        <item name="chipBackgroundColor">@color/primary_to_primary_dark</item>
    </style>

    <style name="Widget.Lize.Chip.option1" parent="Widget.Lize.Chip">
        <item name="chipIconTint">@color/primary_to_primary_dark</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIcon">@drawable/ic_baseline_folder_24</item>
        <item name="android:textColor">@color/grey_to_black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/primary_to_primary_dark</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Lize.Chip.Cut</item>
    </style>

    <style name="Widget.Lize.Chip.option2" parent="Widget.Lize.Chip">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="chipBackgroundColor">@color/primary_to_primary_dark</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/grey_to_black</item>
        <item name="chipEndPadding">15dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Lize.Body1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Lize.Chip.Folder</item>
    </style>

    <style name="ShapeAppearanceOverlay.Lize.Chip.Cut" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Lize.Chip.Folder" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.Lize.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorOnSurface</item>
