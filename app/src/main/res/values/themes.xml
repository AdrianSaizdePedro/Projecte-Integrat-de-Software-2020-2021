<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="Theme.Lize" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Actual Base Ambit Theme -->
        <item name="android:theme">@style/Theme.Lize.Ambit.Teal</item>

        <!-- Material Component filters -->
        <item name="materialCardViewStyle">@style/Widget.Lize.CardView</item>
        <item name="toolbarStyle">@style/Widget.Lize.Toolbar</item>
        <item name="chipStyle">@style/Widget.Lize.Chip</item>
        <item name="floatingActionButtonStyle">@style/Widget.Lize.FAB</item>
        <item name="hintTextColor">@style/Theme.hint</item>
    </style>

    <!-- CardView Style -->
    <style name="Widget.Lize.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="colorSurface">@color/md_black_1000_50</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- ToolBar Style -->
    <style name="Widget.Lize.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.Lize.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.Lize.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <!-- Ambit Color Themes -->
    <style name="Theme.hint" parent="">
        <item name="colorPrimary">@color/light_blue_400</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorSurface">@color/light_blue_A400</item>
        <item name="colorOnPrimary">@color/md_black_1000_50</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/teal_A400</item>
    </style>

    <!-- Ambit Color Themes -->
    <style name="Theme.Lize.Ambit.Red" parent="">
        <item name="colorPrimary">@color/red_100</item>
        <item name="colorPrimaryDark">@color/red_400</item>
        <item name="colorSurface">@color/red_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/teal_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Purple" parent="">
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryDark">@color/purple_400</item>
        <item name="colorSurface">@color/purple_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/light_green_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Indigo" parent="">
        <item name="colorPrimary">@color/indigo_100</item>
        <item name="colorPrimaryDark">@color/indigo_400</item>
        <item name="colorSurface">@color/indigo_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/yellow_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.LightBlue" parent="">
        <item name="colorPrimary">@color/light_blue_100</item>
        <item name="colorPrimaryDark">@color/light_blue_400</item>
        <item name="colorSurface">@color/light_blue_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/orange_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Teal" parent="">
        <item name="colorPrimary">@color/teal_100</item>
        <item name="colorPrimaryDark">@color/teal_400</item>
        <item name="colorSurface">@color/teal_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/red_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.LightGreen" parent="">
        <item name="colorPrimary">@color/light_green_100</item>
        <item name="colorPrimaryDark">@color/light_green_700</item>
        <item name="colorSurface">@color/light_green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/purple_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Yellow" parent="">
        <item name="colorPrimary">@color/yellow_100</item>
        <item name="colorPrimaryDark">@color/yellow_700</item>
        <item name="colorSurface">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/indigo_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Orange" parent="">
        <item name="colorPrimary">@color/orange_100</item>
        <item name="colorPrimaryDark">@color/orange_400</item>
        <item name="colorSurface">@color/orange_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/light_blue_A400</item>
    </style>


    <!-- Prueba de Tema -->
    <style name="Theme.NewTry" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_red_A700</item>
        <item name="colorPrimaryVariant">@color/md_red_A200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_red_200</item>
        <item name="colorSecondaryVariant">@color/md_red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- LIGHT THEME -->
    <style name="RTE_BaseThemeLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="rte_darkTheme">false</item>

        <item name="rte_icMenuCloseClearCancel">@drawable/ic_menu_close_clear_cancel_light</item>
        <item name="rte_icMenuSave">@drawable/ic_menu_save_light</item>
        <item name="rte_icMenuRotateLeft">@drawable/ic_menu_rotate_left_light</item>
        <item name="rte_icMenuRotateRight">@drawable/ic_menu_rotate_right_light</item>

    </style>

    <!-- DARK THEME -->
    <style name="RTE_BaseThemeDark" parent="@style/Theme.AppCompat">
        <item name="rte_darkTheme">true</item>

        <item name="rte_icMenuCloseClearCancel">@drawable/ic_menu_close_clear_cancel_dark</item>
        <item name="rte_icMenuSave">@drawable/ic_menu_save_dark</item>
        <item name="rte_icMenuRotateLeft">@drawable/ic_menu_rotate_left_dark</item>
        <item name="rte_icMenuRotateRight">@drawable/ic_menu_rotate_right_dark</item>
    </style>
</resources>