<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workers.NewAmbitoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ambito_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/ambito_material_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/crear_ambito_top_menu"
                app:title="Nuevo Ã¡mbito"
                app:contentInsetLeft="@dimen/_1sdp"
                app:titleTextColor="@color/white"
                />

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="70dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/nombre_del_ambito"
                android:textSize="@dimen/_13sdp"
                android:textColor="?attr/colorOnPrimary"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Theme.hint"
                        android:layout_marginTop="0dp">

                        <EditText
                            android:id="@+id/nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="#33FFFFFF"
                            android:inputType="textNoSuggestions"
                            android:maxLines="1"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:autofillHints="" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_13sdp"
                android:text="@string/color_de_fondo"
                android:textColor="?attr/colorOnPrimary"/>

            <RelativeLayout
                android:id="@+id/relativeLayoutCardViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/colorAmbitoError"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp">
                    <!-- Fila 1 - Columna 1  -->

                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:rowCount="3"
                        android:columnCount="3">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardRojo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/red_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/rojo"
                                android:textColor="@android:color/white"/>

                        </androidx.cardview.widget.CardView>

                        <!-- Fila 1 - Columna 2 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardMorado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/purple_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/morado"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 1 - Columna 3 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardIndigo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/indigo_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/indigo"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 2 - Columna 1 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAzul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            app:cardBackgroundColor="@color/light_blue_A400"
                            android:onClick="onClick"
                            android:focusable="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/azul"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 2 - Columna 2 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardTeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/teal_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/teal"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 2 - Columna 3 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVerde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/light_green_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/verde"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 3 - Columna 1 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAmarillo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/yellow_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/amarillo"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 3 - Columna 2 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardNaranja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/orange_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/naranja"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Fila 3 - Columna 3 -->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardMarron"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            app:cardBackgroundColor="@color/brown_A400"
                            android:onClick="onClick"
                            android:focusable="true">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:contentDescription="@string/marr_n"
                                android:textColor="@android:color/white"/>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/newAmbitoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:radius="50dip"
                app:cornerRadius="50dp"
                android:layout_marginTop="60dp"
                android:text="@string/nuevo_ambito"

                app:elevation="7dp" />

        </LinearLayout>
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>