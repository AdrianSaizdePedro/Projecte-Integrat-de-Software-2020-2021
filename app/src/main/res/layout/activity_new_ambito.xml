<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".workers.NewAmbitoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nombre del Ámbito:"
            android:textColor="?attr/colorAccent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="#33FFFFFF"
                android:hint="@string/nombre"
                android:textColorHint="@color/md_grey_500"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Color de Fondo:"
            android:textColor="?attr/colorAccent"/>



        <RelativeLayout
            android:id="@+id/relativeLayoutCardViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/colorAmbitoError"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp">
                <!-- Fila 1 - Columna 1  -->

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:rowCount="3"
                    android:columnCount="3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/red_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Rojo"
                            android:textColor="@android:color/white"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Fila 1 - Columna 2 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMorado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/purple_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Morado"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 1 - Columna 3 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardIndigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/indigo_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Indigo"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 2 - Columna 1 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAzul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="@color/light_blue_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Azul"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 2 - Columna 2 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/teal_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Teal"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 2 - Columna 3 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardVerde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/light_green_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Verde"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 3 - Columna 1 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAmarillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/yellow_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Amarillo"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 3 - Columna 2 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNaranja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/orange_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Naranja"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Fila 3 - Columna 3 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMarron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/brown_A400"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:contentDescription="Marrón"
                            android:textColor="@android:color/white"/>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>



        <Button
            android:id="@+id/newAmbitoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:radius="50dip"
            app:cornerRadius="50dp"
            android:layout_marginTop="60dp"
            android:text="Nuevo Ambito"

            app:elevation="7dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>