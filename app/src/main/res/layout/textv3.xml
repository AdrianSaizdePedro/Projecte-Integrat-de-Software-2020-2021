<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/toolbar_backround">

        <com.onegravity.rteditor.toolbar.HorizontalRTToolbar
            android:id="@+id/rte_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:columnCount="4"
                android:rowCount="2">

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_bold"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_bold_24"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_italic"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_italic_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_underline"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_underlined_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_strikethrough"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_strikethrough_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />


                <Spinner
                    android:id="@+id/toolbar_fontcolor"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_color_text_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />


                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_number"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_list_numbered_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_bullet"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_format_list_bulleted_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp" />


                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_link"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_baseline_insert_link_24"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />


                <!-- com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_audio"
                    style="@style/ToolbarButton"
                    android:background="?attr/rte_icToolbarAudio" /-->

                <!-- com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_video"
                    style="@style/ToolbarButton"
                    android:layout_marginRight="4dip"
                    android:background="?attr/rte_icToolbarVideo" /-->


            </GridLayout>
        </com.onegravity.rteditor.toolbar.HorizontalRTToolbar>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>