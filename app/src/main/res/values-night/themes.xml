    </style>

    <!--****************************
        Estilos del Chip Folder
        ****************************-->
    <style name="Widget.Lize.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textAppearance">@style/TextAppearance.Lize.Body2</item>
        <item name="chipBackgroundColor">@color/primary_to_primary_dark</item>
    </style>

    <!-- TransiciÃ³n de Selected-NotSelected -->
    <style name="Widget.Lize.Chip.option1" parent="Widget.Lize.Chip">
        <item name="chipIconTint">@color/primary_to_primary_dark</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIcon">@drawable/ic_baseline_folder_24</item>
        <item name="android:textColor">@color/grey_to_black</item>
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/primary_to_primary_dark</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Lize.Chip.Cut</item>
    </style>

    <!-- Shape Appearance -->
    <style name="ShapeAppearanceOverlay.Lize.Chip.Cut" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Lize.Chip.Folder" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <!--****************************
        Estilos del CardView
        ****************************-->


    <style name="Widget.Lize.CardView.option1" parent="Widget.Lize.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Lize.Card.Cut</item>
        <item name="strokeWidth">@dimen/cardnote_default_stroke_width</item>
        <item name="strokeColor">@color/primary_to_primary_dark</item>
    </style>

    <style name="ShapeAppearanceOverlay.Lize.Card.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--****************************
        Estilos del FAB Button
        ****************************-->
    <style name="Widget.Lize.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

