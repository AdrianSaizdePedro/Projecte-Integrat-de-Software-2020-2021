<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lize" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Actual Base Ambit Theme -->
        <item name="android:theme">@style/Theme.Lize.Ambit.Teal</item>
        <item name="hintTextColor">@style/Theme.hint</item>
        <!-- Material Component filters -->
        <item name="materialCardViewStyle">@style/Widget.Lize.CardView</item>
        <item name="toolbarStyle">@style/Widget.Lize.Toolbar</item>
        <item name="chipStyle">@style/Widget.Lize.Chip</item>
        <item name="floatingActionButtonStyle">@style/Widget.Lize.FAB</item>

    </style>

    <!-- CardView Style -->
    <style name="Widget.Lize.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="colorSurface">@color/md_black_1000</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- ToolBar Style -->
    <style name="Widget.Lize.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.Lize.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.Lize.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <style name="Theme.hint" parent="">
        <item name="colorPrimary">@color/light_blue_400</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorSurface">@color/light_blue_A400</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/teal_A400</item>
    </style>

    <style name="Theme.Lize.Ambit.Teal" parent="">
        <item name="colorPrimary">@color/teal_100</item>
        <item name="colorPrimaryDark">@color/teal_400</item>
        <item name="colorSurface">@color/teal_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/red_A400</item>
    </style>
</resources>