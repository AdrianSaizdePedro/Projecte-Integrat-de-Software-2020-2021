<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.Lize" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dark_grey</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <item name="background">@color/md_grey_dark</item>
        <item name="colorOnBackground">@color/md_white_1000</item>

        <!-- Material Component filters -->
        <item name="hintTextColor">@style/Theme.hint</item>
        <item name="materialCardViewStyle">@style/Widget.Lize.CardView.option1</item>
        <item name="toolbarStyle">@style/Widget.Lize.Toolbar</item>
        <item name="chipStyle">@style/Widget.Lize.Chip.option1</item>
        <item name="floatingActionButtonStyle">@style/Widget.Lize.FAB</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="drawerArrowStyle">@style/drawerToggle</item>
    </style>

    <!--****************************
    Estilos de los Edit TextViews
    ****************************-->
    <!-- Hints -->
    <style name="Theme.hint" parent="">
        <item name="colorPrimary">@color/light_blue_400</item>
    </style>

    <!-- SignUp TextViews -->
    <style name="LogInSignUp" parent="Widget.AppCompat.TextView">
        <item name="android:background">#33FFFFFF</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="paddingStart">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
    </style>

    <!--****************************
        Estilos de Drawable Navigation
        ****************************-->
    <!-- Color Drawer Toggle -->
    <style name="drawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <!-- Header del Drawer -->
    <style name="Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <!-- Menu Lateral de los Ambitos -->
    <style name="MeuAmbitos" parent="">
        <item name="android:layout_width">50dp</item>
        <item name="elevation">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/md_grey_700</item>
    </style>

    <!-- Tinte de los iconos del menu Lateral de los Ambitos -->
    <style name="Cancel" parent="MeuAmbitos">
        <item name="tint">@color/md_blue_700_dark</item>
    </style>
    <style name="Edit" parent="MeuAmbitos">
        <item name="tint">@color/md_green_800_dark</item>
    </style>
    <style name="Delete" parent="MeuAmbitos">
        <item name="tint">@color/md_red_800_dark</item>
    </style>-

    <!--****************************
        Estilos del ToolBar
        ****************************-->
    <style name="Widget.Lize.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!--****************************
        Estilos de Settings Activity
        ****************************-->
    <style name="Settings.Background" parent="">
        <item name="android:background">@color/md_grey_500</item>
    </style>

    <!--****************************
        Estilos de New Ambito / Edit Ambito Activity
        ****************************-->
    <style name="NewAmbito.CardView" parent="CardView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Color de las Cards de los Ambitos -->
    <style name="NewAmbito.CardView.Red">
        <item name="cardBackgroundColor">@color/red_400</item>
    </style>
    <style name="NewAmbito.CardView.Purple">
        <item name="cardBackgroundColor">@color/purple_400</item>
    </style>
    <style name="NewAmbito.CardView.Indigo">
